<Window x:Class="IPReport.View.DepartmentSalesDisplayView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Department Sales" Height="300" Width="700" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" Icon="/IPReport;component/world_big.ico">
	<Grid>
		<ListView 
		ItemsSource="{Binding Path=SalesItems}" Width="Auto">
			
			<ListView.View>
				<GridView>
					<GridViewColumn
				Header="ListID"
				DisplayMemberBinding="{Binding Path=ListID}"
				/>
					<GridViewColumn
				Header="Desc1"
				DisplayMemberBinding="{Binding Path=Desc1}"
				/>
					<GridViewColumn
				Header="Desc2"
				DisplayMemberBinding="{Binding Path=Desc2}"
				/>
					<GridViewColumn
				Header="Qty"
				DisplayMemberBinding="{Binding Path=Qty}"
				/>
					<GridViewColumn
				Header="Price"
				DisplayMemberBinding="{Binding Path=Price}"
				/>
					<GridViewColumn
				Header="Discount"
				DisplayMemberBinding="{Binding Path=Discount}"
				/>
					<GridViewColumn
				Header="Markup"
				DisplayMemberBinding="{Binding Path=Markup}"
				/>
				</GridView>
			</ListView.View>

		</ListView>
	</Grid>
</Window>
