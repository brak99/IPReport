<Window x:Class="IPReport.View.DebugTestQueryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Query Test" Height="395" Width="605">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height ="23"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<TextBox x:Name="QueryBox" Grid.Column="0" Grid.Row="0" AcceptsReturn="True" AcceptsTab="True" />
		<TextBox x:Name="ResultBox" Grid.Column="1" Grid.Row="0" AcceptsReturn="True" AcceptsTab="True" />
		<Button x:Name="QueryButton" Grid.Column="0" Grid.Row="1" Width="100" Content="Query" Click="QueryButton_Click" />
		<Button x:Name="OKButton" Grid.Column="1" Grid.Row="1" Width="100" Content="OK" Click="OKButton_Click" />
	</Grid>
</Window>
